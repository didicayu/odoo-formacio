<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <!-- Inherit the ProductItem template -->
    <t t-inherit="point_of_sale.ProductItem" t-inherit-mode="extension">
        <!-- Extend the ProductItem template by adding the stock quantity field -->
        <xpath expr="//div[@class='product-content']" position="inside">
            <span class="stock-quantity">
                <p>Stock: <t t-esc="stock"/></p> <!-- Access stock from component state -->
            </span>
        </xpath>
    </t>
</templates>
