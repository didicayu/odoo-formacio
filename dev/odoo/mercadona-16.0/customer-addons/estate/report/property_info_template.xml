<odoo>
    <template id="property_info">
        <t t-name="estate.property_info">
            <h2>
                <span t-field="p.name"/>
            </h2>
            <div>
                <strong>Salesman: </strong>
                <span t-field="p.salesman_id"/>
                <br/>

                <strong>Expected price: </strong>
                <span t-field="p.expected_price"/>
                <br/>

                <strong>Status: </strong>
                <span t-field="p.state"/>
                <br/>

                <strong t-if="p.state == 'sold'">!!! Invoice has already been created !!!</strong>
            </div>

            <div>
                <t t-set="property" t-value="p"/>
                <t t-call="estate.offer_table"/>
            </div>
        </t>
    </template>
</odoo>