<odoo>
    <record id="steam_tag_action" model="ir.actions.act_window">
        <field name="name">Steam Game Tags</field>
        <field name="res_model">steam.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="tag_tree_view" model="ir.ui.view">
        <field name="name">steam.tag.tree</field>
        <field name="model">steam.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="tag_form_view" model="ir.ui.view">
        <field name="name">steam.tag.form</field>
        <field name="model">steam.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>VideoGame Tag:</h1>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>