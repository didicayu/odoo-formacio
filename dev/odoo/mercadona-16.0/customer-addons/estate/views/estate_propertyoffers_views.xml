<odoo>
    <record id="action_offer" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate_property_offer</field>
        <field name="view_mode">tree</field>
        <!--<field name="domain">[('property_type_id', '=', active_id)]</field>-->
    </record>
    <!-- Tree View -->
    <record id="offer_tree" model="ir.ui.view">
        <field name="name">estate_property_offer.tree</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <tree editable="top" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="accept_offer" string="Accept Offer" type="object"
                    class="oe_highlight" icon="fa-check" attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                <button name="decline_offer" string="Decline Offer" type="object"
                    class="oe_highlight" icon="fa-times" attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="offer_form" model="ir.ui.view">
        <field name="name">estate_property_offer.form</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <field name="status" />
                </group>
            </form>
        </field>
    </record>
</odoo>