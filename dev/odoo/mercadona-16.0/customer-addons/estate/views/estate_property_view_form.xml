<odoo>
    <record id="estate_property_form" model="ir.ui.view">

        <field name="name">estate_property.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Property">

                <header>
                    <button name="sell_property" type="object" string="SOLD" states="offer_accepted"></button>
                    <button name="cancel_property" type="object" string="CANCEL"></button>
                    <field name="state" widget="statusbar"></field>
                </header>

                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <separator />
                    <group>
                        <field name="property_tag_ids" widget="many2many_tags" can_write="False" options="{'color_field': 'color', 'no_create': True}"/>

                        <field name="property_type_id" string="Property Type" can_write="False" options="{'no_create': True}"/>
                        <field name="postcode" string="Postcode" />
                        <field name="date_availability" string="Availible From" />
                        <field name="expected_price" string="Expected Price" />
                        <field name="selling_price" string="Selling Price" />
                        <field name="best_offer" string="Best Offer" />
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description" />
                                <field name="bedrooms" string="Bedrooms" />
                                <field name="living_area" string="Living Area (m²)" />
                                <field name="facades" string="Facades" />
                                <field name="garage" string="Garage" />
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" string="Garden Area (m²)" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation" string="Garden Orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="total_area" string="Total Area (m²)" />
                            </group>
                        </page>

                        <page string="Offers">
                            <field name="offer_ids" widget="one2many_list" attrs="{'readonly': [('state', 'in', ['offer_accepted', 'sold', 'canceled'])]}"/>
                        </page>

                        <page string="Other info">
                            <group>
                                <field name="salesman_id" string="Salesman" />
                                <field name="buyer_id" string="Buyer" />
                            </group>
                        </page>

                    </notebook>

                    <separator/>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <record id="mt_state_change" model="mail.message.subtype">
        <field name="name">Property confirmed</field>
        <field name="res_model">estate_property</field>
        <field name="default" eval="True"/>
        <field name="description">Property confirmed!</field>
    </record>
</odoo>